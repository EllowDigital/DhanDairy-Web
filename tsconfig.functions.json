/**
 * TypeScript Configuration for Netlify Functions
 * Separate config for serverless functions
 */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "./netlify/functions/dist",
    "rootDir": "./netlify/functions",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "types": ["node"]
  },
  "include": ["netlify/functions/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
